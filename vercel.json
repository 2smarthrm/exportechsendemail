{
 "version": 2,
 "builds": [
  {
   "src": "index.js",
   "use": "@vercel/node", 
   "config": { "includeFiles": ["dist/**"] }
  }
 ],
 "functions": {
    "api/*": {
      "maxDuration": 10,
      "memory": 512
    }
  },


 
 "routes": [
  {
   "src": "/(.*)",
   "dest": "index.js",
   "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://store.exportech.com.pt",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
  }
 ]
}
